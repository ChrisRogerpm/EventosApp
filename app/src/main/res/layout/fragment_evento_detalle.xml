<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animationCache="false"
    tools:context=".Fragments.EventoDetalleFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/imagen_evento_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageview_eventodetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imagen_evento_detalle"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/entrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5db435"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Entrada: "
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/precio_entrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="S/. 20.00"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenido_detalleevento"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:layout_below="@+id/entrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/fecha_nombre_direccion_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/nombre_eventodeldetalle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/nombre_evento_detalle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jorge Sick en Vivo"
                                    android:textColor="#838282"
                                    android:textSize="20sp" />
                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/fecha_mes"
                                    android:layout_marginTop="2.5dp"
                                    android:layout_marginBottom="2.5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/fecha_evento_detalle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="19"
                                        android:textColor="#969696"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/mes_evento_detalle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="6dp"
                                        android:text="DICIEMBRE"
                                        android:textColor="#5db435"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/favorito_localizacion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="right">

                                    <CheckBox
                                        android:id="@+id/chk_favorito"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:background="@drawable/favorito"
                                        android:button="@null"
                                        android:checked="false"
                                        android:focusable="true" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ubicacion"
                                android:layout_marginTop="2.5dp"
                                android:layout_marginBottom="2.5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/ubicacion_evento_detalle"
                                    android:layout_width="22dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="1dp"
                                    android:background="@null"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/marker_vector" />

                                <TextView
                                    android:id="@+id/direccion_evento_detalle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="La posada"
                                    android:textColor="#555555"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/hora"
                                android:layout_marginTop="2.5dp"
                                android:layout_marginBottom="2.5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:background="@null"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/clock"
                                    android:tint="#555555" />

                                <TextView
                                    android:id="@+id/hora_evento_detalle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:text="10:00"
                                    android:textColor="#555555"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2.5dp"
                                android:layout_marginBottom="2.5dp"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/chk_asistentes"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/asistentes"
                                    android:button="@null"
                                    android:clickable="true"/>

                                <TextView
                                    android:id="@+id/tv_cant_asistntes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:text="300"
                                    android:textColor="#555555"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/valoracion_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2.5dp"
                                android:layout_marginBottom="2.5dp"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/chk_calificacion"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/star_vector"
                                    android:button="@null"
                                    android:checked="false"
                                    android:clickable="true"
                                    android:focusable="true" />

                                <TextView
                                    android:id="@+id/tv_calificacion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:text="4.5"
                                    android:textColor="#555555"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/descripcion_evento"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_below="@+id/contenido_detalleevento"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/descripcion_evento_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="hola"
                android:textColor="#555555"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/datos"
            android:gravity="center"
            android:layout_below="@id/descripcion_evento"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/datos"
            android:id="@+id/organizador"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/imagen_organizador"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/logocauli" />
            <TextView
                android:id="@+id/nombre_organizador"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cauli Eventos"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>