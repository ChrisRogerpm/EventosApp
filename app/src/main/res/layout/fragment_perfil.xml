<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_perfil"
    android:orientation="vertical"
    tools:context=".Fragments.PerfilFragment">


<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="250dp"
    android:gravity="center"
    android:background="#000"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Usuario:"
            android:textColor="#555"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Gary Calle"
            android:textColor="#555"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reputacion"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reputación:"
            android:textColor="#555"/>
        <RatingBar
            android:id="@+id/ratingbar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:numStars="5"
            android:rating="5" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Eventos publicados:"
            android:textColor="#555"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:textColor="#555"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Eventos en espera:"
            android:textColor="#555"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02"
            android:textColor="#555"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Coninue como usuario premium al acabar su mes gratis Aqui."
            android:textColor="#555"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_width="220dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    
    <Button
        android:id="@+id/button_logout"
        android:alpha="0.5"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorWhite"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_corner"
        android:text="Cerrar Sesión" />
</LinearLayout>
</RelativeLayout>