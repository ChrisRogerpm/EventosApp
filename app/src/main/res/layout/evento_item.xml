<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="5dp">
        <RelativeLayout
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_evento"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/slider1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/contenido"
            android:layout_below="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/asistentes_valoracion_fecha"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                </LinearLayout>

                <TextView
                    android:id="@+id/nombre_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dia del Skate"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/fecha_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nombre_evento"
                    android:layout_below="@+id/nombre_evento"
                    android:text="21/06/18"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
                <TextView
                    android:id="@+id/lugarevento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre_evento"
                    android:layout_toEndOf="@id/fecha_evento"
                    android:layout_toRightOf="@id/fecha_evento"
                    android:paddingLeft="5dp"
                    android:text="Discoteca: Tusan"
                    android:textColor="@color/colorWhite" />
        </RelativeLayout>
</RelativeLayout>